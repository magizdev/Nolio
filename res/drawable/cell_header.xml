<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- android:shape="" 表示是圆角矩形还是椭圆等等 -->
    <solid android:color="#ffffff" />
    <!-- 背景颜色 -->

    <stroke
        android:width="0.5dp"
        android:color="#000000" />
    <!-- 图片边框属性 -->
    <gradient
        android:angle="270"
        android:centerColor="#0094FF"
        android:centerX="0.5"
        android:centerY="0.5"
        android:endColor="#7FC9FF"
        android:startColor="#0094FF"
        android:type="linear" />

</shape>